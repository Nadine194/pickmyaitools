---
import SEO from './SEO.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  keywords?: string[];
  ogImage?: string;
  type?: string;
}

const {
  title,
  description,
  canonical,
  keywords = [],
  ogImage = '/og-default.jpg',
  type = 'website',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      keywords={keywords}
      ogImage={ogImage}
      type={type}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-gray-900 text-gray-300 antialiased">
    <header class="border-b border-white/10 bg-gray-900/80 backdrop-blur-sm sticky top-0 z-50">
      <nav class="container mx-auto px-4 py-6">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-serif-display font-normal text-gray-100 hover:text-gray-200 transition-colors">
            PickMyAITools
          </a>
          <ul class="hidden md:flex gap-8 items-center">
            <li>
              <a href="/use-cases" class="text-gray-400 hover:text-gray-200 transition-colors font-sans text-sm">
                Use Cases
              </a>
            </li>
            <li>
              <a href="/comparisons" class="text-gray-400 hover:text-gray-200 transition-colors font-sans text-sm">
                Comparisons
              </a>
            </li>
            <li>
              <a href="/guides" class="text-gray-400 hover:text-gray-200 transition-colors font-sans text-sm">
                Guides
              </a>
            </li>
            <li>
              <a href="/which-ai-tool-should-i-use" class="text-gray-300 hover:text-gray-100 transition-colors font-sans text-sm">
                Tool Selector
              </a>
            </li>
          </ul>
          <ul class="flex md:hidden gap-4 items-center text-sm">
            <li>
              <a href="/use-cases" class="text-gray-400 hover:text-gray-200 transition-colors">
                Use Cases
              </a>
            </li>
            <li>
              <a href="/which-ai-tool-should-i-use" class="text-gray-300">
                Selector
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="border-t border-white/10 bg-gray-900 mt-20">
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
          <div>
            <h3 class="font-serif-display font-normal text-lg mb-4 text-gray-100">PickMyAITools</h3>
            <p class="text-gray-400 text-sm leading-relaxed">
              Find the perfect AI tools for your needs. Expert reviews and comparisons.
            </p>
          </div>
          <div>
            <h4 class="font-sans font-normal mb-4 text-gray-300">Sections</h4>
            <ul class="space-y-3 text-sm">
              <li><a href="/use-cases" class="text-gray-400 hover:text-gray-200 transition-colors">Use Cases</a></li>
              <li><a href="/comparisons" class="text-gray-400 hover:text-gray-200 transition-colors">Comparisons</a></li>
              <li><a href="/guides" class="text-gray-400 hover:text-gray-200 transition-colors">Guides</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-sans font-normal mb-4 text-gray-300">Resources</h4>
            <ul class="space-y-3 text-sm">
              <li><a href="/which-ai-tool-should-i-use" class="text-gray-400 hover:text-gray-200 transition-colors">Tool Selector</a></li>
              <li><a href="/about" class="text-gray-400 hover:text-gray-200 transition-colors">About</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-sans font-normal mb-4 text-gray-300">Legal</h4>
            <ul class="space-y-3 text-sm">
              <li><a href="/affiliate-disclaimer" class="text-gray-400 hover:text-gray-200 transition-colors">Affiliate Disclosure</a></li>
              <li><a href="/privacy" class="text-gray-400 hover:text-gray-200 transition-colors">Privacy Policy</a></li>
              <li><a href="/terms" class="text-gray-400 hover:text-gray-200 transition-colors">Terms of Service</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-white/10 mt-12 pt-8 text-center text-sm text-gray-500">
          <p>&copy; {new Date().getFullYear()} PickMyAITools. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
