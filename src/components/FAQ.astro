---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items?: FAQItem[];
}

const { items = [] } = Astro.props;
---

{items.length > 0 && (
  <>
    <section class="my-16">
      <h2 class="text-3xl font-serif-display font-normal mb-10 text-gray-100">Frequently Asked Questions</h2>
      <div class="space-y-6">
        {items.map((item) => (
          <div class="border-b border-white/10 pb-8">
            <h3 class="text-xl font-sans font-normal mb-3 text-gray-100">{item.question}</h3>
            <p class="text-gray-400 leading-relaxed">{item.answer}</p>
          </div>
        ))}
      </div>
    </section>

    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": items.map(item => ({
        "@type": "Question",
        "name": item.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": item.answer
        }
      }))
    })} />
  </>
)}
